<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Blog</title>
    <style>
      body {
        background-color: #f8f9fa;
        color: #333;
      }

      h1 {
        color: #495057;
      }

      .card {
        border: none;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
      }

      .card:hover {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      }

      .btn-success,
      .btn-primary,
      .btn-info,
      .btn-danger {
        transition: transform 0.2s ease;
      }

      .btn-success:hover,
      .btn-primary:hover,
      .btn-info:hover,
      .btn-danger:hover {
        transform: scale(1.1);
      }
    </style>
  </head>

  <body>
    <div class="container mt-4">
      <div class="text-center mb-4">
        <h1>Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success mt-3">New Article</a>
      </div>

      <% articles.forEach(article => { %>
      <div class="card mt-3">
        <div class="card-body">
          <h4 class="card-title text-dark"><%= article.title %></h4>
          <p class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </p>
          <p class="card-text mb-2 text-truncate" style="max-height: 60px">
            <%= article.description %>
          </p>
          <div class="d-flex justify-content-between">
            <a href="/articles/<%= article.slug %>" class="btn btn-primary"
              >Read More</a
            >
            <div>
              <a href="articles/edit/<%= article.id %>" class="btn btn-info"
                >Edit</a
              >
              <form
                action="/articles/<%= article.id %>?_method=DELETE"
                method="POST"
                class="d-inline"
              >
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
